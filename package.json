{
	"name": "api",
	"version": "1.0.0",
	"description": "Budget helper",
	"main": "source/server.ts",
	"scripts": {
		"copyUI": "cp -r ../BudgetUI/public/* ./build/www",
		"build": "npx tsc",
		"dev": "ts-node-dev -r dotenv/config source/server.ts",
		"start": "node -r dotenv/config build/server.js",
		"builddocker": "yarn run copyUI && docker buildx build --platform linux/arm/v7 -t danforsberg/budgetapi . --push"
	},
	"author": "Dan Forsberg",
	"license": "ISC",
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-openid-connect": "^2.2.1",
		"mariadb": "^2.5.2",
		"sequelize": "^6.5.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.9",
		"@types/errorhandler": "^1.5.0",
		"@types/express": "^4.17.8",
		"@types/node": "^14.14.25",
		"@types/sequelize": "^4.28.9",
		"@typescript-eslint/eslint-plugin": "^4.14.2",
		"@typescript-eslint/parser": "^4.14.2",
		"eslint": "^7.19.0",
		"ts-node-dev": "^1.1.1",
		"typescript": "^4.1.3"
	}
}